<style media="screen">

ul.nav >li:hover .btn-delete{
	display: block;
}
.gallery1:hover .btn-delete{
	display: block;
}
.btn-delete{
	position: absolute; top:1em; right: 1em; cursor:pointer; font-size: 1em; color: red;
	z-index: 100; display: none;
}
.btn-update{
	position: absolute; top:1em; right: 2em; cursor:pointer; font-size: 1em; color: blue;
}
</style>
<!-- banner -->
	<div class="banner-1">

	</div>
<!-- banner -->
	<!-- models-->
	<div class="model">
		<div class="container">
			<link rel="stylesheet" href="css/swipebox.css">
			<script src="js/jquery.swipebox.min.js"></script>

			<div class="admin-block" ng-if="isAdminLoggedIn">
				<form class="form-inline" action="index.html" method="post">
					<fieldset  >
					<legend>Ajouter une photo</legend>
					<div class="form-group well well-sm">
						<select  ng-model="groupeChoisi" ng-change="changeGroup(groupeChoisi)">
							<option value="" selected="">Choisir ou creer un groupe</option>
							<option ng-repeat="grp in groupes" value="{{grp}}">{{grp}}</option>
							<option style="background-color: rgba(123,213,12, .5)" value="">creer un nouveau groupe</option>
						</select>
						<input ng-show="groupeChoisi == ''" type="text" class="form-control" name="newPhotoGroupe"  ng-model="newPhoto.groupe" placeholder="nom du groupe" style="min-width: 240px !important">
						<input type="text" class="form-control" name="newPhotoSrc"  ng-model="newPhoto.src"  placeholder="url de la photo" style="min-width: 240px !important">
						<input type="button" name="name" value="OK" class="btn-master btn" ng-click="addphoto()">
					</div>
				</fieldset>
				</form>
				<br>
			</div>
					<!-- Nav tabs -->
			<ul class="nav nav-pills" role="tablist">
				<li  ng-repeat="groupe in groupes " ng-class="{active: groupe == groupesmenuactif }">
					<a ng-click=" getPhotoByGroup(groupe)" >{{groupe}}
					&nbsp;
					<span ng-if="isAdminLoggedIn" ng-click="groupe_remove(groupe)"
						class="pull-right btn-delete" title="supprimé" style=""><b><i class="fa fa-remove"></i></b></span>
					</a>
				</li>
			</ul>
			<!-- Tab panes -->
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="th">
					<div class="top-gallery">
						<div ng-if="photosDeGroup" ng-repeat="photo in photosDeGroup  " class="col-md-3 gallery-grid gallery1">
							<span ng-if="isAdminLoggedIn" ng-click="photo_remove(photo._id)"
							class="pull-right btn-delete" title="supprimé" style=""><b><i class="fa fa-trash"></i></b></span>
							<a  class="swipebox">
								<img ng-src="{{photo.src}}" class="img-responsive" alt="[ * ]">
								<div class="textbox">
									{{photo.desc }}
								</div>
							</a>
						</div>
						<div class="clearfix"> </div>
					</div>
				</div>
			</div>
			<script type="text/javascript">
			jQuery(function($) {
				$(".swipebox").swipebox();
			});
			</script>
		</div>
	</div>
	<!-- models-->
